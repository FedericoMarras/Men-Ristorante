@{
    ViewBag.Title = "Elenco Menu";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class=" container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Giorno</th>
                <th scope="col">Pasto</th>
                <th scope="col">Scopri di più </th>

            </tr>
        </thead>
        <tbody>

            @foreach(var m in @ViewBag.Menu) {
            <tr>
                <th scope="row">  @m.Id</th>
                <td>  @m.Giorno</td>
                <td>  @m.Pasto</td>
                <td><button class="btn" style="border-radius:7px; ">  @Html.ActionLink("Dettaglio","DettaglioMenu",new { id = m.Id })</button></td>

            </tr>
    }
        </tbody>



    </table>

</div>
   